<div class="w-full">
    
  <a href="/dashboard" class="flex items-center justify-start">
    <button class="bg-transparent hover:bg-orange-500 text-orange-700 font-semibold hover:text-white py-2 px-4 border border-orange-500 hover:border-transparent rounded mb-4">Dashboard <svg class="w-4 h-4 inline-block" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
      </svg>
    </button>
  </a>
  <div>
    <h2 class="mb-2 font-bold capitalize text-2xl text-center text-orange-500">all Reports</h2>
    <% if (reports.length> 0) { %>
    <% reports.forEach(report=> { %>
    <div class="relative w-full flex flex-col  p-4 shadow rounded-r-lg border-l-4 border-orange-500 mb-4">
      <div class="flex justify-between">
        <div class="">
          <a href="/reports/<%= report._id %>" class="">
            <h3 class="font-bold capitalize text-xl text-orange-500 hover:text-orange-900">
              <%= report.title %>
            </h3>
          </a>
          <p class="text-clip overflow-hidden ...">Reported by <%= report.user.userName %>
          </p>
        </div>
      </div>
    </div>
    <% }) %>

    <% } else { %>
    <p>There is no report to display...</p>
    <% } %>
  </div>
</div>