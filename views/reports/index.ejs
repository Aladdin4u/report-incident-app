<!DOCTYPE html>

    <%- include('../partials/head.ejs') %>
<body>
    
    <%- include('../partials/nav.ejs') %>
    <div class="content">

        <div class="">
            <h2 class="font-bold capitalize text-4xl text-orange-500">Public Reports <span style="float: right;"><a href="/logout" class="font-size-xl text-rose-500 hover:text-rose-900"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg></a></span></h2>
            <% if (reports.length > 0) { %>
                <% reports.forEach(report => { %>
                    <div class="relative w-full flex flex-col  p-4 shadow rounded-r-lg border-l-4 border-orange-500 mb-4">
                        <div class="flex justify-between">
                            <div class="">
                                <a href="/reports/<%= report._id %>" class=""><h3 class="font-bold capitalize text-xl text-orange-500 hover:text-orange-900"><%= report.title %></h3></a>
                                <p class="text-clip overflow-hidden ...">Reported by <%= report.user.userName %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
                
            <% } else { %>
                <p>There is no report to display...</p>
            <% } %>
        </div>
        
        <a href="/dashboard" class="flex items-center justify-center">
            <button class="bg-transparent hover:bg-orange-500 text-orange-700 font-semibold hover:text-white py-2 px-4 border border-orange-500 hover:border-transparent rounded mb-4">Dashboard</button>
        </a>
    </div>
    

    <%- include('../partials/footer.ejs') %>
</body>
</html>