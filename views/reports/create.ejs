<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>
    
    <div class="create-report">
        <form action="/reports" enctype="multipart/form-data" method="POST">
            <label for="title">Report title</label>
            <input type="text" id="title" name="title" required>
            <label for="withness">I am </label>       
            <select name="withness" id="withness">
                <option value="victim" selected>victim</option>
                <option value="bystander">Bystander</option>
            </select>
            <label for="tbody">Tell Us Your Report</label>
            <textarea id="tbody" name="tbody" required></textarea>
            <label for="imgUpload">Image</label>
            <input type="file"  id="imageUpload" name="file">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </form>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>